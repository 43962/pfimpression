<h2>マイページ編集</h2>
<%= form_with model: @customer do |f| %>
  <label for="inputName">User Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザーネーム"%>
  <label for="inputEmail">Email</label>
  <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>
  <label for="inputPassword">Password</label>
  <%= f.text_field :password, autofocus: true, id:"inputPassword", placeholder:"パスワード"%>
  <%= f.submit "変更を保存" %>
  <%= f.submit "戻る" %>
<% end %>
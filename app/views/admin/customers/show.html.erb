<div class='container'>
   <h4 class="my-4 text-center"><b><%= @customer.name %>'s Member details</b></h4>
  <div class='ow mt-5 mb-5 offset-4'>
    <div class='col-md-8'>

      <table class="table table-borderless">
        <tr>
          <td>User Name</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "退会させる", admin_customer_path(@customer), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-danger btn-sm mt-2 ml-5' %>
          </td>
        </tr>
      </table>
     </div>
  </div>
</div>